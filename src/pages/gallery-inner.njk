			watchSlidesProgress: true,
			navigation: {
				nextEl: ".slider-sm-galery__arrow--next",
				prevEl: ".slider-sm-galery__arrow--prev",
			},
			breakpoints: {
				1080: {
					slidesPerView: 8,
				},
				768: {
					slidesPerView: 6,
				}
			}
		});
		var swiper = new Swiper(".slider-gallery__container", {
			loop: true,
			pagination: {
				el: ".slider-gallery__fraction",
				type: "fraction",
				renderFraction: function (currentClass, totalClass) {
					return '<span class="' + currentClass + '"></span>' +
									' из ' +
									'<span class="' + totalClass + '"></span>';
				}
			},
			navigation: {
				nextEl: ".slider-gallery__arrow--next",
				prevEl: ".slider-gallery__arrow--prev",
			},
			thumbs: {
				swiper: swiper2,
			},
		});

	</script>
